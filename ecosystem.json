{
    "apps": [
        {
            "name": "koneksys-interview",
            "script": "node ./dist/main.js"
        }
    ],
    "deploy": {
        "development": {
            "user": "ec2-user",
            "host": "ec2-54-147-128-163.compute-1.amazonaws.com",
            "key": "./Koneksys.pem",
            "ref": "origin/development",
            "repo": "https://github.com/Sandino204/Koneksis-enterview.git",
            "path": "~/var/www/koneksysDevelopment",
            "pre-setup": "apt-get install git ; ls -la",
            "post-deploy":
            "npm install && npm run build  && pm2 startOrRestart ecosystem.json"
        },
        "production": {
            "user": "ec2-user",
            "host": "ec2-54-147-128-163.compute-1.amazonaws.com",
            "key": "./Koneksys.pem",
            "ref": "origin/main",
            "repo": "https://github.com/Sandino204/Koneksis-enterview.git",
            "path": "~/var/www/koneksys",
            "pre-setup": "apt-get install git ; ls -la",
            "post-deploy":
            "npm install && npm run build  && pm2 startOrRestart ecosystem.json"
        }
    }
}